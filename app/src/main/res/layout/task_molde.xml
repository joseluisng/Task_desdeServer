<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_task"
                android:layout_margin="8dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDecTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desciption_task"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageViewEditar"
                    android:layout_width="40pt"
                    android:layout_height="20pt"
                    app:srcCompat="@mipmap/ic_edit"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/imageViewBorrar"
                    android:layout_width="40pt"
                    android:layout_height="20pt"
                    app:srcCompat="@mipmap/ic_delete"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>